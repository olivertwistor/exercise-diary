<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_25_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"/>
    
    <TextView
        android:id="@+id/label_add_exercise_type_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@id/guideline_top_25_percent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/input_add_exercise_type_name"
        app:layout_constraintBottom_toTopOf="@id/label_add_exercise_type_unit"
        app:layout_constraintVertical_chainStyle="spread"
        android:text="@string/exercise_type_name"
        style="@style/form_label"/>

    <EditText
        android:id="@+id/input_add_exercise_type_name"
        android:inputType="text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@id/guideline_top_25_percent"
        app:layout_constraintLeft_toRightOf="@id/label_add_exercise_type_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/input_add_exercise_type_unit"
        app:layout_constraintVertical_chainStyle="spread"
        android:importantForAutofill="no"
        android:hint="@string/exercise_type_name_hint"
        style="@style/form_input"/>

    <TextView
        android:id="@+id/label_add_exercise_type_unit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@id/label_add_exercise_type_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/input_add_exercise_type_unit"
        app:layout_constraintBottom_toTopOf="@id/guideline_bottom_25_percent"
        app:layout_constraintVertical_chainStyle="spread"
        android:text="@string/exercise_type_unit"
        style="@style/form_label"/>

    <EditText
        android:id="@+id/input_add_exercise_type_unit"
        android:inputType="text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@id/input_add_exercise_type_name"
        app:layout_constraintLeft_toRightOf="@id/label_add_exercise_type_unit"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline_bottom_25_percent"
        app:layout_constraintVertical_chainStyle="spread"
        android:hint="@string/exercise_type_unit_hint"
        style="@style/form_input"
        tools:ignore="Autofill"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom_25_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75"/>

    <Button
        android:id="@+id/button_add_exercise_type_save"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_bottom_25_percent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/save_exercise_type"
        style="@style/form_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>
